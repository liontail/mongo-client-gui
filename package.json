{
  "name": "mongo-client",
  "version": "1.0.0",
  "main": "src/electron/main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "dev": "concurrently -k \"npm run dev:react\" \"npm run dev:electron\"",
    "dev:react": "webpack serve --mode development",
    "dev:electron": "wait-on tcp:3000 && electron .",
    "build": "webpack --mode production && electron-builder",
    "package": "electron-builder build --mac --win --linux"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "MongoDB Client GUI Application",
  "build": {
    "appId": "com.mongodb.client.gui",
    "productName": "MongoDB Client GUI",
    "files": [
      "build/**/*",
      "src/electron/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "deb"
    }
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.3.1",
    "@mui/material": "^7.3.1",
    "bson": "^6.10.4",
    "electron": "^37.3.0",
    "electron-builder": "^26.0.12",
    "electron-store": "^8.1.0",
    "mongodb": "^6.18.0",
    "mongoose": "^8.17.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^6.30.1"
  },
  "devDependencies": {
    "@babel/core": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "babel-loader": "^10.0.0",
    "concurrently": "^9.2.0",
    "css-loader": "^7.1.2",
    "electron-is-dev": "^3.0.1",
    "html-webpack-plugin": "^5.6.4",
    "style-loader": "^4.0.0",
    "wait-on": "^8.0.4",
    "webpack": "^5.101.2",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  }
}
